                                                                                                      <Policy Issuer> Jessica </Policy Issuer>
                                                                                                      <Target> /*:Attribute-Category    :Attribute ID                   :Attribute Value */
                                                                                                                     :access-subject     :subject-id                     :carol
                                                                                                                     :resource           :resource-id                    :medical-records
